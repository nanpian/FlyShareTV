<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/volume_set_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/volume_set_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="音量"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/volume_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/thumb_bar"
            android:thumbOffset="2dip"></SeekBar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brightness_set_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/volume_set_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="亮度"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/brightness_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/thumb_bar"
            android:thumbOffset="2dip"></SeekBar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forward_set_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/volume_set_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/forward_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="快进"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forward_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/forward_time_current"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:text="0000"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/forward_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/thumb_bar"
            android:thumbOffset="2dip"></SeekBar>
    </LinearLayout>

</RelativeLayout>