<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/cd_clock_hh_h" 
        android:layout_width="0dp"
        android:layout_weight="1.238"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/cd_clock_hh_h"/>
    <TextView
        android:id="@+id/cd_clock_hh_l" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="5"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/cd_clock_hh_l"/>
    <TextView
        android:id="@+id/cd_clock_mm_h" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="3"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/cd_clock_mm_h"/>
    <TextView
        android:id="@+id/cd_clock_mm_l" 
        android:layout_width="0dp"
        android:layout_weight="1.238"
        android:layout_height="match_parent"
        android:text="9"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/cd_clock_mm_l"/>

</LinearLayout>
