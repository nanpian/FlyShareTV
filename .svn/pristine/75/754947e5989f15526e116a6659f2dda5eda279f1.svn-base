<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="horizontal" >
     
    <cn.fxdata.tv.view.widget.CountdownClock
        android:id="@+id/count_down_clock"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.8" 
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/count_down_clock_bg"
        android:gravity="center"/>
   
	<ImageView
		android:id="@+id/header_image2"
		android:layout_width="0dp"
		android:layout_height="45dp"
		android:layout_weight="1"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:clickable="true"
		android:scaleType="centerCrop"
		android:background="@drawable/image_06" />

	<ImageView
		android:id="@+id/header_image3"
		android:layout_width="0dp"
		android:layout_height="45dp"
		android:layout_weight="1"
		android:clickable="true"
		android:scaleType="centerCrop"
		android:background="@drawable/image_07" />

</LinearLayout>