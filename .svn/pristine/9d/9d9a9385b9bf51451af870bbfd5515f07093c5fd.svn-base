            android:name="cn.fxdata.tv.activity.user.PhotoSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="cn.fxdata.tv.activity.user.UserInformationModfiyActivity"
            android:screenOrientation="portrait" />

