            android:name="cn.fxdata.tv.activity.user.UserInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="cn.fxdata.tv.activity.user.UserLoginedActivity"
            android:screenOrientation="portrait" />
