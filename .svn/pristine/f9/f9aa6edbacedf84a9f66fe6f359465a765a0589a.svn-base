<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/select_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/records_delete_checkbox"
        android:button="@null"
        android:clickable="false"
        android:duplicateParentState="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/select_check"
        android:src="@drawable/avatar_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/thumb"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大话西游"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/time_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/user_program_reservation"
            android:drawablePadding="5dp"
            android:text="已观看到56：56"
            android:textColor="#666666"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>