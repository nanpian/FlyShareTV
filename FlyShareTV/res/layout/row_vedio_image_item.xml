<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/video_shuiyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout 
            android:id="@+id/video_type"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:layout_centerVertical="true"
        	>
                <TextView 
        			android:id="@+id/video_type_cn"
      				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center"
        			android:textColor="#e0FFFFFF"
        			android:textSize="12sp"
        			android:text="电影"/>
    
   				<TextView 
        			android:id="@+id/video_type_en"
      				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center"
        			android:textColor="#e0FFFFFF"
        			android:textSize="12sp"
        			android:text="movie"/>
        </LinearLayout>
		<ImageView 
		    android:id="@+id/fengexian"
			android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/video_type"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#e0FFFFFF" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fengexian"
            android:text="万物生长"
            android:textColor="#e0FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>

    


</RelativeLayout>